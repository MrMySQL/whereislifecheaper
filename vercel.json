{
  "version": 2,
  "buildCommand": "npm run build && npm run migrate",
  "outputDirectory": "dist/frontend",
  "installCommand": "npm install && cd frontend && npm install",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/((?!api/).*)", "destination": "/index.html" }
  ],
  "functions": {
    "api/index.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  }
}
